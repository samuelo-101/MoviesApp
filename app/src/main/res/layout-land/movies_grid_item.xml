<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="3dp"
    app:elevation="3dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="179dp">

        <ImageView
            android:id="@+id/imageView_movie_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="@string/movie_image"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_image_grey" />

        <TextView
            android:id="@+id/textView_movie_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView_movie_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="The Movie" />

        <TextView
            android:id="@+id/textView_movie_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:maxLines="7"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_movie_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView_movie_name"
            app:layout_constraintTop_toBottomOf="@+id/textView_movie_name"
            app:layout_constraintVertical_bias="0.0"
            tools:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout." />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
